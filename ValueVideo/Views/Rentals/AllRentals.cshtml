
@{
    ViewBag.Title = "AllRentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rental History</h2>

<table id="table" class="table table-striped table-hover ">
<thead>
    <tr>

        <th>Movie Name</th>
        <th>Customer</th>
        <th>Date Checked-Out</th>
        <th>Date Returned</th>
    </tr>
</thead>
<tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {

             $('#table').DataTable({
                ajax: {
                    url: '/api/rentals/1',
                    dataSrc: ''
                },

                columns: [
                    {
                        data: "id",
                        render: function(data, type, object) {
                            return object.movie.name;
                        }
                    },
                    {
                        data: "id",
                        render: function(data, type, object) {
                            return object.customer.name;
                        }
                    },
                    {
                        data: "id",
                        render: function(data, type, object) {
                            return (moment(object.checkOutDate).format("MMMM Do YYYY"));
                        }
                    },
                    {
                        data: "id",
                        render: function(data, type, object) {
                            return (moment(object.returnDate).format("MMMM Do YYYY"));
                        }
                    }
                ]
            });


        });
    </script>
}
