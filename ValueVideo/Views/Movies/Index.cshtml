
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index of Movies</h2>
<a class="btn btn-info btn-xs" href="/movies/movieform/">Add a new Movie</a>
<table class="table table-striped table-hover" id="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Genre</th>
        <th>Number Available</th>
    </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {

         $("#table").dataTable({
                ajax: {
                    url: '/api/movies/',
                    dataSrc: ''
                },
                columns: [
                    {
                        data: 'name',
                        render: function(data, type, object) {
                            return "<a href='/movies/movieform/" + object.id +"'>"+data+"</a>";
                        }
                    },
                    {
                        data: 'name',
                        render: function(data, type, object) {
                            return "<p>" + object.genre.name + "</p>";
                        }

                    },
                    {
                        data: 'name',
                        render: function(data, type, object) {
                            return "<p>" + object.numberAvailable + "</p>";
                        }
                    }
                    
                ]
            });

           


        });

    </script>
}


